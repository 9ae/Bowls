<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    
    <EditTextPreference 
        android:key="default_tax"
        android:defaultValue="@string/tax_percent"
        android:title="Tax Percent"
        android:inputType="numberDecimal" 
        />
    
    <EditTextPreference 
        android:key="default_tip"
        android:defaultValue="@string/tip_percent"
        android:title="Tip Percent"
        android:inputType="numberDecimal"
        />
    
    <SwitchPreference
         android:key="left_right"
         android:defaultValue="true"
         android:title="Number pad align"
         android:switchTextOn="RIGHT"
         android:switchTextOff="LEFT"
         android:summaryOn="Number pad on right side"
         android:summaryOff="Number pad on left side"
        />
    
    <CheckBoxPreference
        android:key="tutorial"
        android:defaultValue="true"
        android:title="Show tutorial on start" />
    
</PreferenceScreen>