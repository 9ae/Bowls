<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowActionBar">false</item>
      	<item name="android:windowNoTitle">true</item> 
    </style>
    
    <style name="NumberButton">
          <item name="android:minHeight">@dimen/button_size</item>
          <item name="android:minWidth">@dimen/button_size</item>
          <item name="android:background">@color/num_btn_colors</item>
          <item name="android:textColor">@color/num_btn_text_colors</item>
          <item name="android:layout_margin">@dimen/number_buttons_margin</item>
          <item name="android:textSize">25sp</item>
    </style>
    
    <style name="NumberPadEnterButton">
         <item name="android:background">@color/num_btn_colors</item>
          <item name="android:textColor">@color/num_btn_text_colors</item>
          <item name="android:layout_margin">@dimen/number_buttons_margin</item>
          <item name="android:textSize">30sp</item>
    </style>
    
    <style name="BillLabel">
        <item name="android:textSize">@dimen/large_font</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="BillSubLabel">
        <item name="android:textSize">@dimen/xsmall_font</item>
        <item name="android:textColor">@color/lime</item>
    </style>
    
    <style name="BillValue">
        <item name="android:textSize">@dimen/med_font</item>
        <item name="android:textColor">@android:color/white</item>
         <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SplitButtons">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/split_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="ToastLabel">
        <item name="android:textColor">@color/grapefruit</item>
    </style>
    
     <style name="ToastValue">
        <item name="android:textColor">@color/lime</item>
         <item name="android:textStyle">bold</item>
         <item name="android:paddingLeft">@dimen/number_buttons_margin</item>
    </style>

</resources>