<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="oval">
	<corners
        android:radius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp" />
    <gradient
        android:angle="0"
        android:centerX="50%"
        android:centerY="50%"
        android:endColor="@color/apple"
        android:gradientRadius="9"
        android:startColor="@color/lime"
        android:type="radial"
        android:useLevel="true" />
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
    <size
        android:width="20dp"
        android:height="20dp" />
    <!--  solid
        android:color="@color/apple" / -->  
</shape>
